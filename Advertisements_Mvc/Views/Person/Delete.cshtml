@model Advertisements_Mvc.Models.Person
@{
    ViewBag.Title = Advertisements_Mvc.App_LocalResources.PersonDelete.heading;
}

<h2>@Advertisements_Mvc.App_LocalResources.PersonDelete.heading</h2>
<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-7">
            <h3>@Advertisements_Mvc.App_LocalResources.PersonDelete.person @Model.Name, @Advertisements_Mvc.App_LocalResources.PersonDelete.phone: @Model.PhoneNumber</h3>
        </div>
    </div>

    <h4>@Advertisements_Mvc.App_LocalResources.PersonDelete.subheading</h4>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th class="text-center">@Advertisements_Mvc.App_LocalResources.PersonDelete.name</th>
                <th class="text-center">@Advertisements_Mvc.App_LocalResources.PersonDelete.advtype</th>
                <th class="text-center">@Advertisements_Mvc.App_LocalResources.PersonDelete.price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Advertisements_Mvc.Models.Advertisment advert in ViewBag.Ads)
            {
                <tr>
                    <td class="text-center">@advert.NameOfAd</td>
                    <td class="text-center">@advert.ServiceType.ToString()</td>
                    <td class="text-center">@advert.Price</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="row">
        <div class="col-md-5"></div>
        <div class="col-md-2">
            <button class="btn btn-lg btn-danger" data-toggle="modal" data-target="#modaToConfirm">
                <h5>@Advertisements_Mvc.App_LocalResources.PersonDelete.delete</h5>
            </button>
        </div>
    </div>

    <!--Модальне віконце-->
    <div class="modal fade" id="modaToConfirm" role="dialog">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">@Advertisements_Mvc.App_LocalResources.PersonDelete.confirmation</h4>
                </div>
                <div class="modal-body">

                    @if (ViewBag.Ads.Count == 0)
                    {
                        <p>@Advertisements_Mvc.App_LocalResources.PersonDelete.sure1</p>
                    }
                    else
                    {
                        
                        <p>@Advertisements_Mvc.App_LocalResources.PersonDelete.sure2</p>
                    }
                </div>
                <div class="modal-footer">
                    <a class="btn btn-lg btn-danger" href="~/Person/ConfirmedDelete?ID=@Model.ID">
                        @Advertisements_Mvc.App_LocalResources.PersonDelete.delete
                    </a>                    
                    <button class="btn btn-lg btn-primary" data-dismiss="modal">@Advertisements_Mvc.App_LocalResources.PersonDelete.close</button>                   
                </div>
            </div>
        </div>


    </div>

</div>
