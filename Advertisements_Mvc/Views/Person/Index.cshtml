
@{
    ViewBag.Title = "Всі люди в базі даних";
}

@model IEnumerable<Advertisements_Mvc.Models.Person>

<div>
    <h2>
        Всі люди що є в базі даних
    </h2>
    <table class="table table-striped table-bordered ">
        <thead>
            <tr>
                <th class="text-center">Ім'я</th>
                <th class="text-center">Номер телефону</th>
                <th class="text-center">Ел. пошта</th>
                <th class="text-center">Дії</th>
            </tr>
        </thead>
        <tbody>
            
    @foreach (Advertisements_Mvc.Models.Person ad in Model)
    {
        <tr>
            <td class="text-center">@ad.Name</td>
            <td class="text-center">@ad.PhoneNumber</td>
            <td class="text-center">@ad.Email</td>
            <td class="text-center">
                <div class="btn-group">
                    <p data-placement="top" data-toggle="tooltip" title="Редагувати">
                        <a class="btn btn-primary btn-xs" id="@ad.ID" href="~/Person/Edit?ID=@ad.ID">
                            <span class="glyphicon glyphicon-pencil"></span>
                        </a>
                    </p>
                </div>
                <div class="btn-group">
                    <p data-placement="top" data-toggle="tooltip" title="Видалити">
                        <a class="btn btn-danger btn-xs" id="@ad.ID" href="">
                            <span class="glyphicon glyphicon-trash"></span>
                        </a>
                    </p>
                </div>
            </td>
           
      </tr>
    }
   

        </tbody>
    </table>
    
</div>


