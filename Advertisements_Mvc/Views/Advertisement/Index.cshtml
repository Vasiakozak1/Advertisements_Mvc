@model IEnumerable<Advertisements_Mvc.Models.Advertisment>
@{
    ViewBag.Title = Advertisements_Mvc.App_LocalResources.AdvertisementIndex.heading;
}

<h2>@Advertisements_Mvc.App_LocalResources.AdvertisementIndex.heading</h2>

<div class="container">
    <div class="row">
        <div class="col-md-10"></div>
        <div class="col-md-1 col-md-offset-1">
            <p data-placement="top" data-toggle="tooltip" title="@Advertisements_Mvc.App_LocalResources.AdvertisementIndex.create">
                <a class="btn btn-success btn-sm" href="~/Advertisement/Create" value ="Додати" >
                    <span class="glyphicon glyphicon-plus"></span>
                </a>
            </p>
        </div>
    </div>
</div>


<table class="table table-striped table-bordered table-hover">

    <thead>
        <tr>
            <th class="text-center">@Advertisements_Mvc.App_LocalResources.AdvertisementIndex.name</th>
            <th class="text-center">@Advertisements_Mvc.App_LocalResources.AdvertisementIndex.advtype</th>
            <th class="text-center">@Advertisements_Mvc.App_LocalResources.AdvertisementIndex.price</th>
            <th class="text-center">@Advertisements_Mvc.App_LocalResources.AdvertisementIndex.actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (Advertisements_Mvc.Models.Advertisment ad in Model)
        {
            <tr>
                <td class="text-center">@ad.NameOfAd</td>
                <td class="text-center">@ad.ServiceType</td>
                <td class="text-center">@ad.Price</td>
                @if (ad.Who != null)
                {
                <td class="text-center">
                    <div class="btn-group">
                        <p data-placement="top" data-toggle="tooltip" title="@Advertisements_Mvc.App_LocalResources.AdvertisementIndex.showAdvertiser">
                            <a class="btn btn-xs btn-info" href="#">
                                <span class="glyphicon glyphicon-user"></span>
                            </a>
                        </p>
                    </div>
                </td>
                }
            </tr>
        }
    </tbody>

</table>